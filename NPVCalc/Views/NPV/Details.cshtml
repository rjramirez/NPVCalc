@model NPVCalc.Models.NPV

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>NPV</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LowerBoundDiscountRate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LowerBoundDiscountRate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpperBoundDiscountRate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpperBoundDiscountRate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiscountRateIncrement)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiscountRateIncrement)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CashFlows)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CashFlows)
        </dd>

    </dl>
</div>


<div>
    <table class="table">
        <tr>
            <th></th>
            <th>Discount %</th>
            <th>Net Present Value</th>
        </tr>
        @foreach (var item in Model.NPVItemResult)
        {
            <tr>
                <td>
                    @string.Format("Period {0}(${1})",item.Period,item.CashFlow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NPVResult)
                </td>
            </tr>
        }
    </table>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
